
# Checks the interaction of the layout:include processor with the th:if
# processor.

%TEMPLATE_MODE HTML


%INPUT
<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
	xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout">
<body>
	<div th:if="${true}" layout:insert="~{Page :: text}"></div>
</body>
</html>


%INPUT[Page]
<!DOCTYPE html>
<html>
<body>
	<div layout:fragment="text">
		<p>Included text</p>
	</div>
</body>
</html>


%OUTPUT
<!DOCTYPE html>
<html>
<body>
	<div>
		<div>
			<p>Included text</p>
		</div>
	</div>
</body>
</html>
