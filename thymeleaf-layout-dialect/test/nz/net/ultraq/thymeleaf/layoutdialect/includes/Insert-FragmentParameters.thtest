
# Fragment parameter test for the layout:insert processor.

%TEMPLATE_MODE HTML


%INPUT
<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
	xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout">
<body>
	<div layout:insert="~{Page :: text(greeting='Hello!')}">
		<p layout:fragment="more-text">Source text.</p>
	</div>
</body>
</html>


%INPUT[Page]
<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<body>
	<div layout:fragment="text(greeting)">
		<p th:text="${greeting}">Greeting goes here</p>
		<p layout:fragment="more-text">Replaced text</p>
	</div>
</body>
</html>


%OUTPUT
<!DOCTYPE html>
<html>
<body>
	<div>
		<div>
			<p>Hello!</p>
			<p>Source text.</p>
		</div>
	</div>
</body>
</html>
